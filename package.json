{
  "name": "mivamvt",
  "displayName": "Miva MVT Syntax and Snippets",
  "description": "Miva Template Language Syntax and Snippets",
  "publisher": "mikeabramyans",
  "author": "Mike Abramyans",
  "version": "1.2.2",
  "keywords": [
    "snippets",
    "syntax",
    "language",
    "miva"
  ],
  "engines": {
    "vscode": "^1.38.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikeabramyans/miva-mvt"
  },
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "miva-template",
        "aliases": [
          "Miva Template",
          "miva-template"
        ],
        "extensions": [
          ".mvt",
          ".html",
          ".htm"
        ],
        "configuration": "./mvt-language-configuration.json"
      },
      {
        "id": "miva-script",
        "aliases": [
          "Miva Script",
          "miva-script"
        ],
        "extensions": [
          ".mv"
        ],
        "configuration": "./mv-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "miva-template",
        "scopeName": "text.html.mvt",
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.javascript": "javascript"
        },
        "path": "./syntaxes/MVT.tmLanguage"
      },
      {
        "language": "miva-script",
        "scopeName": "source.miva_script",
        "embeddedLanguages": {
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.javascript": "javascript"
        },
        "path": "./syntaxes/MV.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "miva-template",
        "path": "./snippets/mvt-snippets.json"
      },
      {
        "language": "miva-script",
        "path": "./snippets/mv-snippets.json"
      }
    ]
  }
}
